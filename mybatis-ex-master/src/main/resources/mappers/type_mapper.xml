<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="type_mapper">

    <select id="getById" resultMap="type_map">
        SELECT
        *
        FROM type A
        WHERE A.idtype = #{id}
    </select>

    <select id="get" resultMap="type_map">
        SELECT
        *
        FROM type
    </select>
    <delete id="deleteById">
        DELETE FROM type WHERE idtype=#{id}
    </delete>
    <insert id="create">
        INSERT INTO type (nameType) VALUES(#{name})
    </insert>
    <update id="update">
        UPDATE type SET nameType=#{name} WHERE idtype=#{id}
    </update>

    <resultMap id="type_map" type="com.solvd.lab.automation.v2.mybatis.model.Type" autoMapping="false">
        <id property="id" column="idtype"/>
        <result property="name" column="nameType"/>
           </resultMap>
</mapper>