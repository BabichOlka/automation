<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="textFile_mapper">
    <select id="getById" resultMap="textFile_map">
        SELECT
        *
        FROM textfile C LEFT JOIN version I ON C.idTextFile=I.idversion
        WHERE C.idTextFile = #{id}
    </select>
    <select id="get" resultMap="textFile_map">
        SELECT
        *
        FROM textfile C LEFT JOIN version I ON C.idTextFile=I.idversion
    </select>
    <delete id="deleteById">
        DELETE FROM textfile WHERE idTextFile=#{id}
    </delete>
    <insert id="create">
        INSERT INTO textfile(nameFile, TextFile) VALUES(#{name},#{TextFile})
    </insert>
    <update id="update">
        UPDATE textfile SET c_name=#{name} WHERE idTextFile=#{id}
    </update>
    <resultMap id="textFile_map" type="com.solvd.lab.automation.v2.mybatis.model.TextFile" autoMapping="false">
        <id property="id" column="idTextFile"/>
        <result property="name" column="nameFile"/>
        <result property="TextFile" column="TextFile"/>
        <collection property="versions" ofType="com.solvd.lab.automation.v2.mybatis.model.Version">
            <id property="id" column="idversion" />
            <result property="name" column="nameVersion" />
        </collection>
    </resultMap>

</mapper>