<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="version_mapper">

    <select id="getById" resultMap="version_map">
        SELECT
        *
        FROM version A
        WHERE A.idversion = #{id}
    </select>

    <select id="get" resultMap="version_map">
        SELECT
        *
        FROM version
    </select>
    <delete id="deleteById">
        DELETE FROM version WHERE idVersion=#{id}
    </delete>
    <insert id="create">
        INSERT INTO version (nameVersion) VALUES(#{name})
    </insert>
    <update id="update">
        UPDATE version SET nameVersion=#{name} WHERE idversion=#{id}
    </update>

    <resultMap id="version_map" type="com.solvd.lab.automation.v2.mybatis.model.Version" autoMapping="false">
        <id property="id" column="idversion"/>
        <result property="name" column="nameVersion"/>
        <result property="date" column="date"/>
    </resultMap>
</mapper>