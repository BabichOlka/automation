<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="user_mapper">

    <select id="getById" resultMap="user_map">
        SELECT *
        FROM user
        WHERE iduser = #{id}
    </select>
    <update id="update">
        UPDATE user SET
        email = #{email},
        WHERE iduser = #{id}
    </update>

    <delete id="delete">
        DELETE FROM user
        WHERE iduser = #{id}
    </delete>

    <select id="getAll" resultMap="user_map">
        SELECT * FROM user
    </select>

    <insert id="create">
        INSERT INTO user (email)
        VALUES (#{email})
    </insert>

    <resultMap id="user_map" type="sql.model.User" autoMapping="false">
        <id property="id" column="iduser" />
        <result property="email" column="email"/>
    </resultMap>

</mapper>