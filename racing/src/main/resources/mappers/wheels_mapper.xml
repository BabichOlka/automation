<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="wheels_mapper">
    <select id="getById" resultMap="wheels_map">
        SELECT
        *
        FROM wheels A
        WHERE A.idWheels = #{id}
    </select>
    <select id="get" resultMap="wheels_map">
        SELECT
        *
        FROM wheels
    </select>
    <delete id="deleteById">
        DELETE FROM wheels WHERE idWheels=#{id}
    </delete>
    <insert id="create">
        INSERT INTO wheels(cof) VALUES(#{cof})
    </insert>
    <update id="update">
        UPDATE wheels SET
        cof =#{cof}
        WHERE idWheels=#{id}
    </update>

    <resultMap id="wheels_map" type="com.solvd.automation.lab.model.Wheels" autoMapping="false">
        <id property="id" column="idWheels"/>
        <result property="cof" column="cof"/>
    </resultMap>
</mapper>