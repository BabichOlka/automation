<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="engine_mapper">
    <select id="getById" resultMap="engine_map">
        SELECT
        *
        FROM engine A
        WHERE A.idEngine = #{id}
    </select>
    <select id="get" resultMap="engine_map">
        SELECT
        *
        FROM engine
    </select>
    <delete id="deleteById">
        DELETE FROM engine WHERE idEngine=#{id}
    </delete>
    <insert id="create">
        INSERT INTO engine(maxSpeed) VALUES(#{maxSpeed})
    </insert>
    <update id="update">
        UPDATE engine SET
        maxSpeed =#{maxSpeed}
        WHERE idEngine=#{id}
    </update>

    <resultMap id="engine_map" type="com.solvd.automation.lab.model.Engine" autoMapping="false">
        <id property="id" column="idEngine"/>
        <result property="maxSpeed" column="maxSpeed"/>
    </resultMap>
</mapper>