<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="point_mapper">
    <select id="getById" resultMap="point_map">
        SELECT
        *
        FROM point A
        WHERE A.idPoint = #{id}
    </select>
    <select id="get" resultMap="point_map">
        SELECT
        *
        FROM point
    </select>
    <delete id="deleteById">
        DELETE FROM point WHERE idPoint=#{id}
    </delete>
    <insert id="create">
        INSERT INTO point(x, y, cof) VALUES(#{x}, #{y}, #{cof})
    </insert>
    <update id="update">
        UPDATE point SET
        x =#{x},
        y =#{y},
        cof =#{cof}
        WHERE idPoint=#{id}
    </update>

    <resultMap id="point_map" type="com.solvd.automation.lab.model.Point" autoMapping="false">
        <id property="id" column="idPoint"/>
        <result property="x" column="x"/>
        <result property="y" column="y"/>
        <result property="cof" column="cof"/>
    </resultMap>
</mapper>