<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="user_mapper">
    <update id="update">
        UPDATE user SET
        u_name = #{name},
        u_password = #{password}
        WHERE u_id = #{id}
    </update>

    <delete id="deleteById">
        DELETE FROM user
        WHERE u_id = #{id}
    </delete>

    <select id="getById" resultMap="user_map">
        SELECT *
        FROM user
        WHERE user.u_id = #{id}
    </select>
    <select id="getAll" resultMap="user_map">
        SELECT * FROM user
    </select>
    <insert id="create">
        INSERT INTO user (u_id, u_name, u_password)
        VALUES (#{id}, #{name}, #{password})
    </insert>

    <resultMap id="user_map" type="data.UserInfo" autoMapping="false">
        <id property="id" column="u_id" />
        <result property="name" column="u_name"/>
        <result property="password" column="u_password"/>
    </resultMap>

</mapper>