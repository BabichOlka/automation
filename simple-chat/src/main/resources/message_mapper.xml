<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="message_mapper">
    <select id="getHistory" resultMap="message_map">
        SELECT *
        FROM message
        ORDER BY date
        LIMIT 20
    </select>
    <select id="getById" resultMap="message_map">
        SELECT *
        FROM message
        WHERE message.m_id = #{id}
    </select>
    <update id="update">
        UPDATE message SET
        m_text = #{msg},
        m_user_id = #{clientId},
        date = #{date},
        token = #{token}
        WHERE m_id = #{id}
    </update>

    <delete id="delete">
        DELETE FROM message
        WHERE m_id = #{id}
    </delete>

    <select id="getAll" resultMap="message_map">
        SELECT * FROM message
    </select>

    <insert id="create">
        INSERT INTO message (m_id, m_text, m_user_id, date, token)
        VALUES (#{id}, #{msg}, #{clientId}, #{date}, #{token})
    </insert>

    <resultMap id="message_map" type="data.Message" autoMapping="false">
        <id property="id" column="m_id" />
        <id property="clientId" column="m_user_id"/>
        <result property="token" column="token"/>
        <result property="msg" column="m_text"/>
        <result property="date" column="date"/>
    </resultMap>

</mapper>